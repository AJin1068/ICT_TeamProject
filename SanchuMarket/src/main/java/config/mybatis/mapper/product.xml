<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product">
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	<!-- 회원목록 조회  -->
	<select id="product_list" resultType="vo.product.ProductVo">
		select * from product order by u_idx
	</select>
	
	
	
	
	
	<!-- 상품목록 1개 조회 -->
	<select id="product_selectOne" parameterType="int" resultType="vo.product.ProductVo">
		select * from product where p_idx=#{p_idx}
	</select>
	
	
	<!-- 상품등록 -->
	<insert id="product_insert" parameterType="vo.product.ProductVo">
		insert into product values(
		(select nvl(max(p_idx)+1,1) from product),
		 #{u_idx},
		 #{c_idx},
		 #{p_name},
		 sysdate,
		 #{p_price},
		 #{p_condition},
		 #{p_exp},
		 #{p_location},
		 0,
		 #{p_status})
	</insert>
		
	
	
</mapper>












